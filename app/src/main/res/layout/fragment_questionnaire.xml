<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Question #" />

    <TextView
        android:id="@+id/questionContent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Placeholder question"/>

    <!-- select one multiple choice option -->
    <RadioGroup
        android:id="@+id/multipleChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

       <!-- will ideally change colour when selected -->
        <RadioButton
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:visibility="visible"
            tools:text="Choice A"
            tools:textAllCaps="false" />

        <RadioButton
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:visibility="visible"
            tools:text="Choice B"
            tools:textAllCaps="false" />

        <RadioButton
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:visibility="visible"
            tools:text="Choice C"
            tools:textAllCaps="false" />

        <RadioButton
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"

            android:padding="16dp"
            android:visibility="visible"
            tools:text="Choice D"
            tools:textAllCaps="false" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/selectMultiple"
        android:visibility="visible">
        <!-- will ideally change colour when selected -->
        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:button="@android:color/transparent"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:padding="16dp"
            tools:text="Choice 1"
            android:visibility="visible"/>
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:button="@android:color/transparent"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:padding="16dp"
            tools:text="Choice 2"
            android:visibility="visible"/>
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:button="@android:color/transparent"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:padding="16dp"
            tools:text="Choice 3"
            android:visibility="visible"/>
        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:button="@android:color/transparent"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray"
            android:padding="16dp"
            tools:text="Choice 4"
            android:visibility="visible"/>
    </LinearLayout>

    <!-- short response -->
    <EditText
        android:id="@+id/shortResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/gray"
        android:hint="@string/freetext_hint"
        android:padding="16dp"
        android:textSize="16sp"
        android:inputType="date"/>  <!-- date/text I think -->

    <!-- For the cities question? Content of spinner has to be added in the java file -->
    <Spinner
        android:id="@+id/spinnerDropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown"
        android:hint="Enter a city"
        android:layout_marginVertical="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/gray"
        android:padding="16dp"
        android:drawableEnd = "@drawable/ic_dropdown"/>


    <!-- back, next, and submit buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/blue"
            android:padding="16dp"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:text="Back"
            tools:textAllCaps="false" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/blue"
            android:padding="16dp"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:text="Next"
            tools:textAllCaps="false" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/blue"
            android:padding="16dp"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="Submit"
            tools:textAllCaps="false" />
    </RelativeLayout>
</LinearLayout>