<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textSize="32sp"
                android:textColor="?android:textColorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonQuestionnaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_question_answer"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/questionnaire"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvQuestionnaireTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/questionnaire"
                        android:textSize="18sp"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvQuestionnaireDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/questionnaire_description"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonPlans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_checklist"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/plans"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvPlansTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plans"
                        android:textSize="18sp"
                        android:textColor="?android:textColorPrimary"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvPlansDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/plans_description"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Support Connection Section -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Connection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/city_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Services in Your City"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you are in immediate danger, call 911"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:paddingTop="4dp"
                android:background="@android:color/holo_red_light"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/support_links_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All services listed are free and confidential. If you need help in a language other than English, most services can provide interpretation assistance."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>