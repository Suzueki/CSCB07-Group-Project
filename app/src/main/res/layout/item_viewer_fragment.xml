<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/itemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Item Viewer"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Dynamic Fields Container -->
        <LinearLayout
            android:id="@+id/fieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- File Section (for documents only) -->
        <LinearLayout
            android:id="@+id/fileSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="📄 Document File (PDF or Image)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fileNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:text="No file selected"
                android:textSize="14sp" />

            <!-- Document Preview WebView -->
            <WebView
                android:id="@+id/documentWebView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:scrollbars="vertical|horizontal" />

            <!-- Download Controls Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="📥 Download Options"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666" />

            <!-- Main Action Buttons (Download, Copy, Select) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:enabled="false"
                    android:text="📥 Download"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/copyLinkButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:text="📋 Copy Link"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/selectFileButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:text="📎 Select New"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Download Status Text -->
            <TextView
                android:id="@+id/downloadStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="📥 Download options will appear when file is loaded"
                android:textColor="#999999"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="💾 Update"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#757575"
                android:text="⬅️ Back"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>